/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
$_description = $_product->getDescription();
$_seoDescription = $_product->getAdditionalWebText();

$_skylotecHelper = $this->helper('skylotec');
$_embedded_youtube_code = $_product->getEmbeddedCodeYouTube();
?>
<div class="product-description">
    <div class="description std">
        <?php echo $_helper->productAttribute($_product, $_description, 'description') ?>
    </div>
    <?php if ($_seoDescription): ?>
        <div class="seo-description std">
            <?php echo $_helper->productAttribute($_product, $_seoDescription, 'additional_web_text') ?>
        </div>
    <?php endif; ?>
    <?php if ($_embedded_youtube_code): ?>
        <div class="video-thumbnail">
            <a href="<?php echo $_skylotecHelper->getVideoUrl($_embedded_youtube_code) ?>" class="video-link" data-fancybox-type="iframe">
                <img src="<?php echo $_skylotecHelper->getVideoThumbnail($_embedded_youtube_code) ?>" alt="">
            </a>
        </div>
    <?php endif; ?>
</div>
<?php echo $this->getChildHtml('application_images') ?>
